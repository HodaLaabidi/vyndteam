<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:layout_marginTop="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_one_happy"
    >

<com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
    android:id="@+id/tv_day_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Lundi"
    android:textColor="@color/black"
    app:fonttype="bold"
    android:textSize="13sp"
    android:layout_marginLeft="16dp"
    />
    <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
        android:id="@+id/tv_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="19:00 - 20:30"
        android:textColor="@color/colorPrimary"
        app:fonttype="bold"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />
    <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
        android:id="@+id/tv_day_description"
        android:layout_below="@+id/tv_day_name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        tools:text="Une bière à 3dt Un seau et une bouteille de vin à 50dt"
        android:textColor="@color/gray_3"
        android:layout_marginTop="4dp"
        app:fonttype="bold"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_0"
        android:layout_below="@+id/tv_day_description"/>

</RelativeLayout>