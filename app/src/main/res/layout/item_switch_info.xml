<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"

    android:paddingTop="6dp">

    <com.vyndsolutions.vyndteam.widgets.images.NetworkImageView
        android:id="@+id/niv_info"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
         />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/niv_info"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Ticket Resto" />


    </LinearLayout>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:theme="@style/redchec"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/switch_info"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/niv_info"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/niv_info"
        android:background="@color/gray_0" />
</RelativeLayout>