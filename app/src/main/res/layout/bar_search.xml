<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon_search_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_return"/>
    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:background="@drawable/background_search">
        <ImageView
            android:layout_width="17.5dp"
            android:layout_height="17.5dp"
            android:layout_marginLeft="6.1dp"
            android:layout_marginTop="9.1dp"
            android:src="@drawable/ic_search_orange" />
        <EditText
            android:id="@+id/et_business_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="fonts/Lato-Regular"
            android:hint="Nom du commerce"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="6.4dp"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:theme="@style/Theme.App.Edittext" />
        <ImageView
            android:id="@+id/ic_cancel_name"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_cancel"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_search">
        <ImageView
            android:layout_width="17.5dp"
            android:layout_height="17.5dp"
            android:layout_marginLeft="6.1dp"
            android:layout_marginTop="9.1dp"
            android:src="@drawable/map_icon" />
        <EditText
            android:id="@+id/et_search_region"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="fonts/Lato-Regular"
            android:hint="RÃ©gion   "
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="6.4dp"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:theme="@style/Theme.App.Edittext" />
        <ImageView

            android:id="@+id/ic_cancel_region"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_cancel"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>


