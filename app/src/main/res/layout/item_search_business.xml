<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_search_business"
    android:orientation="vertical"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
    <com.vyndsolutions.vyndteam.widgets.images.NetworkImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/img_business"
        android:src="@drawable/empty_business_photo"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/business_name"
            android:fontFamily="fonts/Lato-Regular"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:textSize="16sp"
            android:text="Nom du commerce"
            android:textColor="@color/blackTextColor"
            android:layout_marginTop="12dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/categorie"
                android:fontFamily="fonts/Lato-Regular"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="12sp"
                android:text="Restaurant"
                android:textColor="@color/grey_text_color"/>
            <TextView
                android:id="@+id/business_region"
                android:fontFamily="fonts/Lato-Regular"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/grey_text_color"
                android:layout_alignParentRight="true"
                android:text="region"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

</LinearLayout>
