<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_business"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/business_rang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:gravity="right"
            android:text="."
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <com.vyndsolutions.vyndteam.widgets.images.NetworkImageView
                android:id="@+id/img"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_gravity="center_vertical"

                android:src="@drawable/background_camera_photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            android:paddingTop="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@fonts/Lato-Regular"
                    android:text="name"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/claim"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/claim"
                    android:visibility="gone" />
            </LinearLayout>

            <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
                android:id="@+id/subCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@fonts/Lato-Regular"
                android:text="subCategory"
                android:textColor="#B1BAC4"
                android:textSize="12sp" />

            <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Lato-Regular"

                android:text="region"
                android:textColor="#64C7CB "
                android:textSize="12sp" />

            <com.vyndsolutions.vyndteam.utils.TextStyle.LatoTextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Lato-Regular"
                android:text="adress"
                android:textColor="#B1BAC4 " />

        </LinearLayout>

        <ImageView
            android:id="@+id/blocked"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/blocked"
            android:visibility="gone" />

        <View
            android:id="@+id/rep_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Lato-Regular"
                android:text="Date de modification:  "
                android:textColor="#B1BAC4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@fonts/Lato-Regular"
                android:text="16 Sep 2018"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ligne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgrountItemColor"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>


</LinearLayout>



